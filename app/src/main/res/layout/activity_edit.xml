<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f6ed"
    tools:context=".activities.EditActivity">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayNameLayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text="Enter your desired display name"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"
                android:paddingStart="5dp"
                android:textSize="23sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingEnd="5dp"
                android:id="@+id/editTextForDisplayName"/>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailLayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email address"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"
                android:paddingStart="5dp"
                android:textSize="23sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingEnd="5dp"
                android:id="@+id/editTextForEmail"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberLayout"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your phone number"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"
                android:paddingStart="5dp"
                android:textSize="23sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingEnd="5dp"
                android:id="@+id/editTextForNumber"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emergencyLayout"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your emergency number"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="30dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"
                android:paddingStart="5dp"
                android:textSize="23sp"
                android:backgroundTint="@android:color/transparent"
                android:paddingEnd="5dp"
                android:id="@+id/editTextForEmergency"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/skip"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="#ff4046"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Skip"
            android:textSize="23sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/next"
        app:cardBackgroundColor="#0b8405"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Next"
            android:textSize="23sp" />

    </android.support.v7.widget.CardView>


</RelativeLayout>