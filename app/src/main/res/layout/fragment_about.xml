<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aboutId"
    tools:context=".navFragments.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/us"
                android:background="@android:color/holo_green_dark"
                android:src="@drawable/girls"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/us"
                android:padding="10dp"
                android:textSize="13sp"
                android:id="@+id/names"
                android:textAlignment="center"
                android:layout_below="@+id/us"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/names">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About DIDE"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:id="@+id/abt"
                    android:layout_marginStart="15dp"
                    android:textSize="28sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:paddingTop="15dp"
                    android:textSize="17sp"
                    android:fontFamily="casual"
                    android:textColor="#000000"
                    android:layout_below="@+id/abt"
                    android:text="Dide (a Yoruba word meaning 'rise') was created by THE AMAZONS with the sole aim of giving a voice to the voiceless and supressed. \n\nMany people never found the opportunity to voice out, to be heard and to get justice without being embarrased.\n\nDIDE is the solution!!"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>