<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navFragments.HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/homebckd"
            android:scaleType="fitXY"
            android:alpha="0.7"/>
    </FrameLayout>
    <android.support.v7.widget.CardView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:id="@+id/dontmess"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@android:color/holo_red_light"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Don't mess with me"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/counsellor"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/feeds"
        android:layout_alignTop="@+id/trivia"
        app:cardBackgroundColor="@android:color/holo_green_dark"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Meet a counsellor"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/feeds"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/report"
        android:layout_alignTop="@+id/dontmess"
        app:cardBackgroundColor="@android:color/holo_blue_bright"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Feeds"
            android:textSize="15sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/motiv"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/dontmess"
        android:layout_marginTop="199dp"
        app:cardBackgroundColor="@android:color/holo_purple"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Quotes"
            android:textSize="15sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/trivia"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dontmess"
        android:layout_marginBottom="137dp"
        app:cardBackgroundColor="@android:color/holo_orange_light"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Trivia"
            android:textSize="15sp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/report"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/motiv"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@android:color/holo_red_dark"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:text="Report"
            android:textSize="15sp"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>