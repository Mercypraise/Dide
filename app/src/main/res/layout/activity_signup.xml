<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/imageSign"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.SignupActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/signupbkd"
            android:alpha="0.6"
            android:scaleType="fitXY"/>
    </FrameLayout>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="30dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/cuntainer"
            android:layout_centerInParent="true">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#ffffff"
                android:id="@+id/displayNameCard">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:hint="Display name"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:id="@+id/nameText"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#ffffff"
                android:id="@+id/emailCard">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:hint="Email"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/emailText"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="20dp"
                android:id="@+id/numberCard">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:hint="Phone number"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:inputType="phone"
                    android:id="@+id/numberText"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@android:color/holo_orange_light"
                android:id="@+id/passwordCard">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:hint="Enter your password"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:id="@+id/passwordText"
                    android:textSize="20sp"
                    android:inputType="textPassword"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="@android:color/holo_orange_light"
                android:id="@+id/genderCard">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="male"
                        android:textSize="20sp"
                        android:id="@+id/maleGender"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:text="female"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/maleGender"
                        android:id="@+id/femaleGender"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cuntainer"
            android:layout_marginEnd="30dp"
            android:src="@drawable/next"
            android:id="@+id/btn_signup"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="60dp"
            app:backgroundTint="@android:color/holo_red_dark" />

    </android.support.v7.widget.CardView>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:text="Already have an account, log in"
        android:paddingEnd="7dp"
        android:textColor="#cd830e"
        android:textSize="17sp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/progressBar"/>


</RelativeLayout>